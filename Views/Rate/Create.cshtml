@model Evention2.Models.RateCreateViewModel

@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your rate for @Model.Event_name</h2>

@using (Html.BeginForm("Create", "Rate", new { eventId=Model.Event_id}, FormMethod.Post, new { id="rate_form"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2 control-label">
                <label>Your score</label>
            </div>
            <div class="col-md-10 form-check">
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.Rating_Score, 1, new { @class = "form-check-input" })
                    <label class="form-check-label">1</label>
                </div>
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.Rating_Score, 2, new { @class = "form-check-input" })
                    <label class="form-check-label">2</label>
                </div>
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.Rating_Score, 3, new { @class = "form-check-input" })
                    <label class="form-check-label">3</label>
                </div>
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.Rating_Score, 4, new { @class = "form-check-input" })
                    <label class="form-check-label">4</label>
                </div>
                <div class="form-check-inline">
                    @Html.RadioButtonFor(model => model.Rating_Score, 5, new { @class = "form-check-input" })
                    <label class="form-check-label">5</label>
                </div>
                <!--@Html.EditorFor(model => model.Rating_Score, new { htmlAttributes = new { @class = "form-control" } })-->
                @Html.ValidationMessageFor(model => model.Rating_Score, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                <label>Comment</label>
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

