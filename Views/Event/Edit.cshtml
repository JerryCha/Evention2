<script>
    $(window).ready(function () {

        // Date picker
        $(function () {
            var today = new Date();
            var startDate = addDays(today, 2);
            var endDate = addDays(today, 4);
            $('#datebox1').datepicker({
                dateFormat: 'yy-mm-dd',
            });
            $('#datebox1').datepicker("setDate", startDate);
            $('#datebox2').datepicker({
                dateFormat: 'yy-mm-dd',
            });
            $('#datebox2').datepicker("setDate", endDate);
        });
    });

    function addDays(date, days) {
        var d = new Date(date);
        d.setDate(d.getDate() + days);
        return d;
    }
</script>

